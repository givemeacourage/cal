/* pages/cal/cal.wxss */
.content{
  height: 1180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1522214118677&di=4f5b3ee44bce3d4d750c88623767424d&imgtype=0&src=http%3A%2F%2Fupload.mnw.cn%2F2017%2F0505%2F1493975724447.png');
  background-repeat: repeat;
  padding-top: 30rpx;
}
.screen{
  background-color: #fff;
  border-radius: 3px;
  text-align: right;
  width: 720rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-right: 10rpx;
  margin-bottom: 30rpx;
}
.btnGroup{
  display: flex;
  flex-direction:row; 
}
.item{
  width:160rpx;
  min-height: 150rpx;
  margin:10rpx;
  text-shadow:0 1px 1px rgba(0, 0, 0, 3) ;
  border-radius: 5px;
  text-align: center;
  line-height: 150rpx;
}
.orange{
  color:#fff;
  border: solid 1px orange;
  background-color: orange;
}
.blue{
  color: #fff;
  border: solid 1px skyblue;
  background-color: skyblue;
}
